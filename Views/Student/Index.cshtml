@model IEnumerable<StudentGradeMVC.Models.Student>

@{
    ViewData["Title"] = "Student Listing";
}

<h1>Student List</h1>

<p class="mt-5">
    <a asp-action="Upsert" class="btn btn-outline-success">Add Student          <i class="fa-solid fa-user-plus"></i></a>
</p>
<table class="table table-striped">
    <thead class="bg-dark text-light text-sm-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addressln1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addressln2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IGTag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TikTokTag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseID)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Addressln1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Addressln2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IGTag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TikTokTag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>
                <td>
                    <a asp-action="Upsert" class="btn btn-outline-success" asp-route-id="@item.Id"><i class="fa-solid fa-pen"></i></a> |
                    <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.Id"><i class="fa-solid fa-info fa-lg"></i></a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa-solid fa-trash-can"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
