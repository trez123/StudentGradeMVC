@model StudentGradeMVC.Models.Course
@{
    var header = "Course Creation Form";
}
    <div class="col-md-7">
        <form method="post" asp-action="Upsert" enctype="multipart/form-data">
            @if (Model.Id != 0)
            {
                <input asp-for="Id" hidden class="form-control" />
                header = "Edit Course Information";
            }
            <h1>@header</h1>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MaxStudent" class="control-label"></label>
                <input type="number" asp-for="MaxStudent" class="form-control" />
            </div>
        
            <div class="form-group">
                @if (Model.Id == 0)
                {
                    <input type="submit" value="Add Course" class="btn btn-outline-success" />
                }
                else
                {
                    <input type="submit" value="Update Changes" class="btn btn-info" />

                }
            </div>
        </form>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            // Html.RenderPartial("_ValidationScriptsPartial");
            <partial name="_ValidationScriptsPartial" />
        }
    }