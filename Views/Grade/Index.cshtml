@model IEnumerable<StudentGradeMVC.Models.Grade>
@{
    ViewData["Title"] = "Student Listing";
}
<h1>Course List</h1>

<p class="mt-5">
    <a asp-action="Upsert" class="btn btn-outline-success">Add Course          <i class="fa-solid fa-user-plus"></i></a>
</p>
<table class="table table-striped">
    <thead class="bg-dark text-light text-sm-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.Course.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.Course.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Score)
                </td>
                <td>
                    <a asp-action="Upsert" class="btn btn-outline-success" asp-route-id="@item.Id"><i class="fa-solid fa-pen"></i></a> |
                    <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.Id"><i class="fa-solid fa-info fa-lg"></i></a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa-solid fa-trash-can"></i></a>
                </td>

            </tr>

        }
    </tbody>
</table>
